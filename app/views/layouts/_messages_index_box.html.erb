<div class='message_index'>
  <div class='message_header'>Messages</div>
  <div class='message_list'>
      <% @conversations[0..4].each do |conversation| %>
        <%= conversation.traveler.image %>
        <%= conversation.traveler.name %>
        <%= conversation.updated_at %>
        <%= conversation.messages.last.shorten %>
        <%= conversation.listing.address.city_and_state %>
        <%= conversation.trip.display_duration %>??????
        <%= conversation.trip.confirmation %>
        <%= conversation.trip.total_price %>
  </div>
  <div><%= link_to "All messages", conversation_path</div>
</div>
