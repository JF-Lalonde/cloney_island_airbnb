<h1>Edit Your Experience</h1>

<div class="container">
  <h1>Edit Profile</h1>

  <section class="form">
    <%= form_for @experience do |f| %>
      <div class="form-group">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.label :duration, "Duration" %>
        <%= f.text_field :duration %>
      </div>
      <div class="form-group">
        <%= f.label :tagline, "Tagline" %>
        <%= f.text_field :tagline %>
      </div>
      <div class="form-group">
        <%= f.label :what, "What We'll Do" %>
        <%= f.text_field :what %>
      </div>
      <div class="form-group">
        <%= f.label :where, "Where We'll Be" %>
        <%= f.text_field :where %>
      </div>
      <div class="form-group date-select">
        <%= f.label :provisions, "Provisions" %>
        <%= f.text_field :provisions %>
      </div>
      <div class="form-group">
        <%= f.label :notes, "Notes" %>
        <%= f.text_field :notes %>
      </div>
      <div class="form-group">
        <%= f.label :group_size, "Group Size" %>
        <%= f.text_field :group_size %>
      </div>
      <div class="form-group">
        <%= f.label :guest_requirements, "Guest Requirements" %>
        <%= f.text_field :guest_requirements %>
      </div>
      <div class="form-group">
        <%= f.label :cancellation_policy_type, "Cancellation Policy Type" %>
        <%= f.text_field :cancellation_policy_type %>
      </div>
      <div class="form-group">
        <%= f.label :price, "Price" %>
        <%= f.text_field :price %>
      </div>
      <div class="form-group">
        <%= f.label :host_description, "Host Description" %>
        <%= f.text_field :host_description %>
      </div>
      <div class="form-group">
        <%= f.label :street_address, "Street Address" %>
        <%= f.text_field :street_address %>
      </div>
      <div class="form-group">
        <%= f.label :city, "City" %>
        <%= f.text_field :city %>
      </div>
      <div class="form-group">
        <%= f.label :state, "State" %>
        <%= f.text_field :state %>
      </div>
      <div class="form-group">
        <%= f.label :zipcode, "Zipcode" %>
        <%= f.text_field :zipcode %>
      </div>
      <div class="button.confirm_booking_button">
        <%= f.submit "Update Your Experience" %>
      </div>
    <% end %>
  </div>
  <%= button_to "Erase Experience", experience_path(@experience), method: :delete %>
</div>
