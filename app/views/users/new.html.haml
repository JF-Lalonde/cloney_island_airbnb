.create-account-box
  %h1 Create a New Account

  =form_for @user do |f|
    =f.label :email, required: true
    =f.text_field :email
    %br

    =f.label :first_name, required: true
    =f.text_field :first_name
    %br

    =f.label :last_name, required: true
    =f.text_field :last_name
    %br

    =f.label :phone_number, required: true
    =f.text_field :phone_number
    %br

    =f.label :password, required: true
    =f.password_field :password
    %br

    =f.hidden_field :role, value: @cart

    =f.submit "Sign Up"
